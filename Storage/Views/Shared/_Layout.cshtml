@using Storage.Helpers
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Print.css")" rel="stylesheet" type="text/css" media="print" />

    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.formatCurrency-1.4.0.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.formatCurrency.all.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Site.js")" type="text/javascript"></script>

    <script type="text/javascript">
        var globalCurrentRegion = '@CurrencyHelper.GetCurrentCultureName()';
    </script>
</head>

<body>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="menu">
            <div class="menu-item">
                @Html.ActionLink("Начало", "Index", "Home")
            </div>
            <div class="menu-item">
                @Html.ActionLink("Товар", "Index", "Product")
            </div>
            <div class="menu-item">
                @Html.ActionLink("Категория", "Index", "Category")
            </div>
            <div class="menu-item">
                @Html.ActionLink("Клиент", "Index", "Client")
            </div>
            <div class="menu-item">
                @Html.ActionLink("Приход", "Index", "Invoice", new { type = "Income" }, null)
            </div>
            <div class="menu-item">
                @Html.ActionLink("Расход", "Index", "Invoice", new { type = "Expenditure" }, null)
            </div>
            <div class="menu-item">
                @Html.ActionLink("Прайс", "PriceList", "Product")
            </div>
            <div class="menu-item" style="float: right;">
                @Html.ActionLink("Выход", "LogOff", "Account")
            </div>
            <div class="menu-item" style="float: right;">
                @Html.ActionLink("Настройки", "Edit", "User")
            </div>
        </div>
    }
    <div style="clear:both;"></div>
    @RenderBody()
</body>
</html>
